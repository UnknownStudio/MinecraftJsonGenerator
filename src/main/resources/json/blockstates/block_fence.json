{
    "multipart": [
        { "apply": { "model": "%1$s:%2$s_post" } },
        {
            "when": { "north": "true" },
            "apply": { "model": "%1$s:%2$s_side", "uvlock": true }
        },
        {
            "when": { "east": "true" },
            "apply": { "model": "%1$s:%2$s_side", "y": 90, "uvlock": true }
        },
        {
            "when": { "south": "true" },
            "apply": { "model": "%1$s:%2$s_side", "y": 180, "uvlock": true }
        },
        {
            "when": { "west": "true" },
            "apply": { "model": "%1$s:%2$s_side", "y": 270, "uvlock": true }
        }
    ]
}